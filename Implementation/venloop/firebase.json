{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/task-submission/view",
        "destination": "/task-submission/view.html"
      },
      {
        "source": "/team-detail/view",
        "destination": "/team-detail/view.html"
      },
      {
        "source": "/admin-edit-task-template/view",
        "destination": "/admin-edit-task-template/view/index.html"
      },
      {
        "source": "/team-join",
        "destination": "/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
