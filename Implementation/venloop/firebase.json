{
  "hosting": {
    "public": "out",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "**/*.@(js|css|woff2|svg)",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "public,max-age=31536000,immutable"
          }
        ]
      },
      {
        "source": "**/*.html",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-store"
          }
        ]
      },
      {
        "source": "**",
        "headers": [
          {
            "key": "Cache-Control",
            "value": "no-cache"
          }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/task-submission/view",
        "destination": "/task-submission/view.html"
      },
      {
        "source": "/team-detail/view",
        "destination": "/team-detail/view.html"
      },
      {
        "source": "/admin-edit-task-template/view",
        "destination": "/admin-edit-task-template/view/index.html"
      },
      {
        "source": "/team-join/view",
        "destination": "/team-join/view.html"
      },
      {
        "source": "/Leaderboard/view",
        "destination": "/Leaderboard/view/index.html"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
